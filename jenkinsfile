pipeline {
    agent any
    environment {
        // تعريف المتغيرات البيئية
        DOCKER_IMAGE = 'saudx40v/python'
        DOCKER_TAG = 'V1' // يمكنك تحديد علامة (tag) مخصصة
    }
    stages {
        stage('Checkout') {
            steps {
                // تحقق من الكود من مستودع Git
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/saudx40v/Deployment--2.git']])
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // بناء صورة Docker من Dockerfile
                    echo 'Building Docker image...'
                    sh '''
                    docker build -t python:latest .
                    '''
                }
            }
        }
        stage('Login to Docker Hub') {
            steps {
                script {
                    // تسجيل الدخول إلى Docker Hub
                    echo 'Logging into Docker Hub...'
                    withCredentials([usernamePassword(credentialsId: 'jenkins1', usernameVariable: 'saudx40v', passwordVariable: 'Qqwer2008*')]) {
                        sh '''
                        echo $Qqwer2008* | docker login --username $saudx40v --password-stdin
                        '''
                    }
                }
            }
        }
        stage('Push Image to Docker Hub') {
            steps {
                script {
                    // دفع الصورة إلى Docker Hub
                    echo 'Pushing Docker image to Docker Hub...'
                    sh '''
                    docker push python
                    '''
                }
            }
        }
    }
    post {
        success {
            echo 'Docker image pushed to Docker Hub successfully!'
        }
        failure {
            echo 'There was an error during the Docker image build or push process.'
        }
    }
}